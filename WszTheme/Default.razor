@namespace Wsz.Oqt.WszTheme
@inherits ThemeBase

<main role="main">
    <nav class="navbar navbar-expand-md navbar-light bg-light fixed-top shadow">
        <Logo /><Menu Orientation="Horizontal" />
        <div class="controls ms-auto">
            <div class="controls-group"><UserProfile /> <Login /> <ControlPanel /></div>
        </div>
    </nav>
    <div class="content">
        <Pane Name="@PaneNames.Admin" />
    </div>
</main>


